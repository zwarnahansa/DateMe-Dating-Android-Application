<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileView">

    <RelativeLayout
        android:id="@+id/relativeLayoutNavBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/nav_panel">

        <LinearLayout
            android:id="@+id/navBtnGroup"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/profileBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:clickable="true"
                android:background="@drawable/circle_btn_gray"/>

            <Button
                android:id="@+id/profileBtnIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-35dp"
                android:clickable="true"
                android:background="@drawable/ic_user_rose"/>

            <Button
                android:id="@+id/mainBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:clickable="true"
                android:background="@drawable/circle_btn_gray"/>

            <Button
                android:id="@+id/mainBtnIcon"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="-32dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/ic_heard_hand_ash" />

            <Button
                android:id="@+id/msgBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:clickable="true"
                android:background="@drawable/circle_btn_gray"/>

            <Button
                android:id="@+id/msgBtnIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="-38dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:background="@drawable/ic_chat_ash" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileImgRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayoutNavBtn"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/profImgLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="115dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/male_business" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/profImgLinearLayout">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:paddingTop="10dp"
                android:text="Kevin Peterson, 22"
                android:textAlignment="center"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userBioLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/userDetailsLayout">

            <TextView
                android:id="@+id/userBio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Bio goes here"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mediaBtnGroup"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/userBioLayout"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/settingBtnGroup"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <Button
                    android:id="@+id/settingBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:clickable="true"
                    android:background="@drawable/circle_btn_gray" />

                <Button
                    android:id="@+id/settingBtnIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-60dp"
                    android:clickable="true"
                    android:background="@drawable/ic_settings_ash_24dp" />

                <TextView
                    android:id="@+id/settingText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:textSize="18dp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="-65dp"
                    android:text="Settings" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/editBtnGroup"
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <Button
                    android:id="@+id/editBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="170dp"
                    android:clickable="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_btn_gray" />

                <Button
                    android:id="@+id/editBtnIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-90dp"
                    android:clickable="true"
                    android:background="@drawable/ic_edit_ash_24dp" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="103dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-65dp"
                    android:layout_marginTop="80dp"
                    android:textAllCaps="true"
                    android:text="Edit Info"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mediaBtnGrouplayout"
            android:layout_below="@id/mediaBtnGroup"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="110dp">

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="180dp"
                android:clickable="true"
                android:background="@drawable/circle_btn_primary" />

            <Button
                android:id="@+id/cameraBtnIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-60dp"
                android:clickable="true"
                android:background="@drawable/ic_photo_camera_white_24dp" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-68dp"
                android:layout_marginTop="60dp"
                android:textAllCaps="true"
                android:text="Add Media"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/mediaBtnGrouplayout"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="180dp"
                android:clickable="true"
                android:background="@drawable/circle_btn_light_blue" />
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>